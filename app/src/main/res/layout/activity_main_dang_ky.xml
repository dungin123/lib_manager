<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            tools:context="FormLogin.MainActivityDangKy">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Đăng Ký Tài Khoản"
                android:textColor="#000000"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ed_HoTen_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_account_box_24"
                android:drawableLeft="@drawable/ic_baseline_account_box_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter họ tên"
                android:inputType="textPersonName"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/ed_TenDangNhap_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_supervised_user_circle_24"
                android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter tên đang nhập"
                android:inputType="textPersonName"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_HoTen_fromDangKy" />

            <EditText
                android:id="@+id/ed_Email_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_mark_email_read_24"
                android:drawableLeft="@drawable/ic_baseline_mark_email_read_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_TenDangNhap_fromDangKy" />

            <EditText
                android:id="@+id/ed_SoDienThoai_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_perm_phone_msg_24"
                android:drawableLeft="@drawable/ic_baseline_perm_phone_msg_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter số điện thoại"
                android:inputType="textPersonName"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_Email_fromDangKy" />

            <EditText
                android:id="@+id/ed_PassWord_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter mật khẩu"
                android:inputType="textPassword"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_SoDienThoai_fromDangKy" />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13">

                <RadioGroup
                    android:id="@+id/rd_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rd_Nam_fromDangKy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/rd_nu_fromDangKy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:text="Nữ"
                        android:textColor="#000000" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="24dp"
                android:text="Giới tính?"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_NgayThangNam_fromDangKy" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_from_dangKy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/custom_from_dangky"
                android:text="Đăng ký"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/ed_XacThucPassWord_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter xác thực"
                android:inputType="textPassword"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_PassWord_fromDangKy" />

            <EditText
                android:id="@+id/ed_NgayThangNam_fromDangKy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#939393"
                android:textColor="#939393"
                android:textColorHint="#939393"
                android:drawableStart="@drawable/ic_baseline_date_range_24"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter ngày tháng năm sinh"
                android:inputType="date"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_XacThucPassWord_fromDangKy" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="Bằng cách nhấp vào đăng ký,bạn đồng ý với điều khoản và điều kiện sử dụng của chúng tôi? ."
                android:textColor="#08A899"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <EditText
                android:id="@+id/ed_vaiTro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Admin"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ed_NgayThangNam_fromDangKy" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>

